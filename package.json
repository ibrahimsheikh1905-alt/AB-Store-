  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2"
  }
}
