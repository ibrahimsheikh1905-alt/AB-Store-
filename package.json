{
  "name": "ecommerce-clone",
  "version": "1.0.0",
  "description": "Full-stack e-commerce application clone",
  "main": "index.js",
  "scripts": {
    "dev": "node start-servers.js",
    "dev:concurrent": "concurrently \"npm run server\" \"npm run client\"",
